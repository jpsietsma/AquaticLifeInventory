@using System.Collections.Generic;
@using AQLI.Data.Models;
@using AQLI.DataServices;
@using AQLI.DataServices.context;
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Http;

@model AquaticTankModel;
@inject DataFactory DataSource;
@inject DatabaseContext Database;
@inject UserManager<WebsiteUser> UserManager;

@{
    var WebsiteUser = await UserManager.GetUserAsync(User);
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@(Model.TankID == 0 ? "Establish New Tank" : "Viewing Tank Details: " + Model.Name)</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="addEditForm" method="post" asp-controller="Tank" asp-action="_Save" asp-antiforgery="true" data-parsley-validate>
                <input type="hidden" name="TankId" value="@Model.TankID" />
                <input type="hidden" name="Added" value="@(DateTime.Now)" />
                <input type="hidden" id="OwnerID" name="OwnerID" value="@WebsiteUser.UserId" />
                
                <!-- Tank Purchase Record -->
                <div class="form-row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="control-label"><b>Purchase Record</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @("#" + Model.Purchase.PurchaseID + " -- " + Model.Purchase.Date + " -- " + Model.Purchase.Store.StoreName + " -- " + Model.Purchase.Description)
                            }
                            else
                            {
                                <select id="PurchaseID" class="form-control" name="PurchaseID" required>
                                    @if (DataSource.List_TankTypes().Count() > 0)
                                    {
                                        if (Model.TankID != 0)
                                        {
                                            foreach (PurchaseModel purchase in DataSource.List_Purchases().Where(p => p.PurchaseID == Model.PurchaseID))
                                            {
                                                <option value="@(purchase.PurchaseID)">@("#" + purchase.PurchaseID + " -- " + purchase.Date + " -- " + purchase.Store.StoreName + " -- " + purchase.Description)</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="">-- Choose Purchase Record --</option>

                                            foreach (PurchaseModel purchase in DataSource.List_Purchases().Where(p => p.PurchaseCategoryID == 8 && p.TankID == null))
                                            {
                                                <option value="@(purchase.PurchaseID)">@("#" + purchase.PurchaseID + " -- " + purchase.Date + " -- " + purchase.Store.StoreName + " -- " + purchase.Description)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Tank Purchase Records Found --</option>
                                    }

                                </select>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Tank Name, Capacity, and Water Type form row -->
                <div class="form-row">
                    <div class="col-4">
                        <div class="form-group">
                            <label class="control-label"><b>Tank Name</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.Name)
                            }
                            else
                            {
                                <input type="text" class="form-control" name="Name" placeholder="Enter Tank Display Name..." value="@Model.Name" required @(Model.TankID > 0 ? "disabled" : "") />
                            }
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label class="control-label"><b>Tank Capacity</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.Capacity + " gallons")
                            }
                            else
                            {
                                <select id="Capacity" class="form-control" name="Capacity" required>
                                    <option value="">-- Choose Capacity (gallons) --</option>
                                    <option value="1">1g</option>
                                    <option value="2">2g</option>
                                    <option value="5">5g</option>
                                    <option value="10">10g</option>
                                    <option value="15">15g</option>
                                    <option value="20">20g</option>
                                    <option value="29">29g</option>
                                    <option value="30">30g</option>
                                    <option value="40">40g</option>
                                    <option value="55">55g</option>
                                    <option value="60">60g</option>
                                    <option value="75">75g</option>
                                    <option value="100">100g</option>
                                    <option value="125">125g</option>
                                </select>
                            }
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label class="control-label"><b>Water Type</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.WaterType.WaterTypeName)
                            }
                            else
                            {
                                <select id="WaterType" class="form-control" name="WaterTypeID" required>
                                    @if (DataSource.List_WaterTypes().Count() > 0)
                                    {
                                        <option value="">-- Choose Water Type --</option>

                                        foreach (WaterTypeModel waterType in DataSource.List_WaterTypes())
                                        {
                                            if (Model.TankID != default)
                                            {
                                                <option value="@(waterType.WaterTypeID)" selected="@(Model.WaterType.WaterTypeID == waterType.WaterTypeID)">@(waterType.WaterTypeName)</option>
                                            }
                                            else
                                            {
                                                <option value="@(waterType.WaterTypeID)">@(waterType.WaterTypeName)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Water Types --</option>
                                    }

                                </select>
                            }
                        </div>
                    </div>
                </div>
                <!-- Environment and Temporment form row -->
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"><b>Environment</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.Environment.EnvironmentName)
                            }
                            else
                            {
                                <select id="EnvironmentID" class="form-control" name="EnvironmentID" required>
                                    @if (DataSource.List_Environments().Count() > 0)
                                    {
                                        <option value="">-- Choose Environment Type --</option>

                                        foreach (EnvironmentModel environmentModel in DataSource.List_Environments())
                                        {
                                            if (Model.TankID != default)
                                            {
                                                <option value="@(environmentModel.EnvironmentID)" selected="@(environmentModel.EnvironmentID == Model.WaterTypeID)">@(environmentModel.EnvironmentName)</option>
                                            }
                                            else
                                            {
                                                <option value="@(environmentModel.EnvironmentID)">@(environmentModel.EnvironmentName)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Tank Types --</option>
                                    }

                                </select>
                            }
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"><b>Tank Temporment</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.Temporment.TempormentName)
                            }
                            else
                            {
                                <select id="Temporment" class="form-control" name="TempormentID" required>
                                    @if (DataSource.List_TempormentLevels().Count() > 0)
                                    {
                                        <option value="">-- Choose Tank Temporment --</option>

                                        foreach (TempormentModel agressionLevel in DataSource.List_TempormentLevels())
                                        {
                                            if (Model.TankID != default)
                                            {
                                                <option value="@(agressionLevel.TempormentID)" selected="@(Model.Temporment.TempormentID == agressionLevel.TempormentID)">@(agressionLevel.TempormentName)</option>
                                            }
                                            else
                                            {
                                                <option value="@(agressionLevel.TempormentID)">@(agressionLevel.TempormentName)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Agression Levels --</option>
                                    }
                                </select>
                            }
                        </div>
                    </div>
                </div>
                <!-- Tank Type and Creature Type form row -->
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"><b>Tank Type</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.TankType.TankTypeName)
                            }
                            else
                            {
                                <select id="TankTypeID" class="form-control" name="TankTypeID" required>
                                    @if (DataSource.List_TankTypes().Count() > 0)
                                    {
                                        <option value="">-- Choose Tank Type --</option>

                                        foreach (TankTypeModel tankType in DataSource.List_TankTypes())
                                        {
                                            if (Model.TankID != default)
                                            {
                                                <option value="@(tankType.TankTypeID)" selected="@(tankType.TankTypeID == Model.WaterTypeID)">@(tankType.TankTypeName)</option>
                                            }
                                            else
                                            {
                                                <option value="@(tankType.TankTypeID)">@(tankType.TankTypeName)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Tank Types --</option>
                                    }

                                </select>
                            }
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label"><b>Creature Type</b></label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.CreatureType.CreatureTypeName)
                            }
                            else
                            {
                                <select id="CreatureType" class="form-control" name="CreatureTypeID" required>
                                    @if (DataSource.List_CreatureTypes().Count() > 0)
                                    {
                                        <option value="">-- Choose Creature Type --</option>

                                        foreach (CreatureTypeModel creatureType in DataSource.List_CreatureTypes())
                                        {
                                            if (Model.TankID != default)
                                            {
                                                <option value="@(creatureType.CreatureTypeID)" selected="@(Model.CreatureTypeID == creatureType.CreatureTypeID)">@(creatureType.CreatureTypeName)</option>
                                            }
                                            else
                                            {
                                                <option value="@(creatureType.CreatureTypeID)">@(creatureType.CreatureTypeName)</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="">-- No Creature Types --</option>
                                    }

                                </select>
                            }
                        </div>
                    </div>
                </div>
                <!-- Tank Description form row -->
                <div class="form-row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="control-label"><b>Description</b></label>
                            <textarea class="form-control" name="Description" rows="3" placeholder="Enter a friendly description for the tank..">@(Model.Description ?? null)</textarea>
                        </div>
                    </div>
                </div>
                <!-- Status dropdowns form group form row -->
                <div class="form-row">
                    <div class="col-4">
                        <label class="control-label">Active</label>
                        @if (Model.TankID > 0)
                        {
                            <br />
                            @(Model.IsActive ? "Yes" : "No")
                        }
                        else
                        {
                            <select id="IsActive" class="form-control" name="IsActive" required>
                                <option value="true">Yes </option>
                                <option value="false">No</option>
                            </select>
                        }
                    </div>
                    <div class="col-4">
                        <div class="form-check">
                            <label class="control-label">Maintenance Mode</label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.IsMaintenance ? "Yes" : "No")
                            }
                            else
                            {
                                <select id="IsMaintenance" class="form-control" name="IsMaintenance" required>
                                    <option value="false">No </option>
                                    <option value="true">Yes</option>
                                </select>
                            }
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-check">
                            <label class="control-label">Quarantine Mode</label>
                            @if (Model.TankID > 0)
                            {
                                <br />
                                @(Model.IsQuarantine ? "Yes" : "No")
                            }
                            else
                            {
                                <select id="IsQuarantine" class="form-control" name="IsQuarantine" required>
                                    <option value="false">No </option>
                                    <option value="true">Yes</option>
                                </select>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            @if (Model.TankID != 0)
            {
                if (Model.UserFish.Count() > 0)
                {
                    <button type="button" class="btn btn-warning mr-auto">Disband Tank</button>
                }
                else
                {
                    <button type="button" class="btn btn-danger mr-auto">Delete Tank</button>
                }
            }

            @if (Model.TankID == 0)
            {
                <button type="button" class="btn btn-success on-new" onclick="$('#addEditForm').submit();">Establish</button>
            }
            <button type="button" class="btn btn-secondary" data-dismiss="modal">@(Model.TankID > 0 ? "Close" : "Cancel")</button>
        </div>
    </div>
</div>