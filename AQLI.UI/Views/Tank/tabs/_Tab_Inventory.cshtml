@using AQLI.Data.Models;
@using AQLI.DataServices.context;
@using AQLI.DataServices;

@inject DatabaseContext Database;
@inject DataFactory DataSource;

@section Style {
    <link rel="stylesheet" href="~/css/Purchases/Purchases.css" />
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <table id="FishPurchaseTable" class="table table-bordered table-light table-striped table-hover sdn-purchase-table col-12" border="1">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Purchase Date
                        </th>
                        <th>
                            Purchase Type
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Cost
                        </th>
                        <th>
                            Ext
                        </th>
                        <th>
                            Store
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody class="sdn-purchase-table-body">
                    @foreach (PurchaseModel purchase in DataSource.List_Purchases().Where(p => p.PurchaseCategory.CategoryName.Contains("Equipment -")))
                    {
                        <tr class="sdn-purchase-table-row" data-id="@purchase.PurchaseID">
                            <td class="sdn-purchase-table-cell">
                                @purchase.Date
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.PurchaseCategory.CategoryName
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.Description
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.Quantity
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.Cost
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.ExtCost
                            </td>
                            <td class="sdn-purchase-table-cell">
                                @purchase.Store.StoreName
                            </td>
                            <td class="text-left">
                                <button type="button" data-id="@purchase.PurchaseID" class="btn-sm btn-success sdn-assign-purchase">Assign</button>
                                <button type="button" data-id="@purchase.PurchaseID" class="btn-sm btn-danger sdn-assign-purchase">Remove</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Purchases/Purchases.js"></script>
}