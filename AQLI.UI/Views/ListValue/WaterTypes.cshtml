@model IEnumerable<AQLI.Data.Models.WaterTypeModel>

@{
    ViewData["Title"] = "WaterTypes";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Water Types</h1>
        </div>        
    </div>

    <div class="row">
        <div class="col-12">
            <a asp-action="Create">Create New</a>
        </div>        
    </div>

    <div class="row">
        <table class="table table-bordered table-striped table-hover col-12">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.WaterTypeName)
                    </th>
                    <th style="width: 20%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="p-0">
                        <td>
                            @Html.DisplayFor(modelItem => item.WaterTypeName)
                        </td>
                        <td class="align-self-center">
                                <button asp-action="Edit" asp-route-id="@item.WaterTypeID" id="editButton" data-id="@item.WaterTypeID" class="btn btn-sm btn-warning"><i class="far fa-edit"></i> Edit</button>
                                <button asp-action="Details" asp-route-id="@item.WaterTypeID" id="viewButton" data-id="@item.WaterTypeID" class="btn btn-sm btn-primary m-2"><i class="fas fa-eye"></i> View</button>
                                <button asp-action="Delete" asp-route-id="@item.WaterTypeID" id="deleteButton" data-id="@item.WaterTypeID" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></button>                         
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
