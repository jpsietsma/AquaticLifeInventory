@{
    ViewData["Title"] = "Home Page";
}
@model WebsiteUser;

@using System.Linq;
@using AQLI.Data.Models;
@using AQLI.DataServices;
@using Microsoft.AspNetCore.Identity;

@inject DataFactory DataSource
@inject UserManager<WebsiteUser> UserManager 

@section Style {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />
}

@{ 
    var user = await UserManager.GetUserAsync(User);

}

<style>
    .dataTables_length {
        display: none;
    }
</style>

<div class="grid">
    <div class="row">
        <div class="col-8 text-center">
            <h2 class="display-9 col-8">@user.FirstName's Home Dashboard</h2>
        </div>
        <br />
    </div>
    <div name="tankCards" class="row justify-content-center" style="display:none">
        @foreach (var item in DataSource.List_UserTanks(user.UserId).Where(t => t.IsActive))
        {
            <!-- Established tank cards -->
            <div id="tankCard_@item.TankID" class="card tank-card col-2" data-id="@item.TankID">
                <div class="card-header text-lg-center">
                    @(item.Name ?? item.Owner.FirstName + "'s " + item.Environment.ToString() + " tank") (#@item.TankID)
                    <button type="button" class="close remove-card float-right align-top" onclick="Tank.HideCard('#tankCard_' + @(item.TankID))">&times;</button>
                </div>
                <div class="card-body text-left">
                    <div>Description: @(item.Description ?? item.Environment.ToString() + " tank") </div>
                    <div>Tank Size: @item.Capacity gallons</div>
                    <div>Environment: @item.Environment.EnvironmentName</div>
                    <div>Water Type: @item.WaterType.WaterTypeName</div>
                    <div class="align-content-center align-bottom">Added @item.Added</div>
                </div>
                <div class="card-footer" style="font-size: 10px;">
                    <button type="button" class="btn btn-sm btn-danger float-right tank-remove-btn" data-id="@item.TankID" onclick="Tank.openConfirmDeleteModal(@item.TankID)">Delete</button>
                    <button type="button" class="btn btn-sm btn-primary float-left tank-details-btn" data-id="@item.TankID" onclick="Tank.events.cardClicked(this)">Details</button>
                </div>
            </div>
        }
        @if (DataSource.List_UserTanks(user.UserId).Count() == 0)
        {
            <!-- Add tank card -->
            <div id="tankCard_addCard" class="card tank-card col-2" data-id="0" onclick="Tank.events.cardClicked(this)">
                <div class="card-header text-center">
                    Add New Tank
                </div>
                <div class="card-body text-left">
                    <p>Freshwater: Aquatic Freshwater fish </p>
                    <p>Saltwater: Marine Saltwater fish </p>
                    <p>Quarantine: Isolation Tank for sick or new fish, plants, and aquatics </p>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="btn-group-sm col-4">
                            <input type="button" class="btn btn-sm btn-primary" value="Freshwater" />
                        </div>
                        <div class="btn-group-sm col-4">
                            <input type="button" class="btn btn-sm btn-info" value="Saltwater" />
                        </div>
                        <div class="btn-group-sm col-4">
                            <input type="button" class="btn btn-sm btn-warning" style="margin-left: -10px;" value="Quarantine" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />

    <!-- Dashboard Tab Navigation -->
    <div class="row justify-content-center">
        <div class="col-9 text-center">
            <ul class="nav nav-tabs nav-justified">
                <li class="nav-item">
                    <a href="#tanks_tab" class="nav-link active" data-toggle="tab"> <img src="~/images/icons/TankStatus_Established_Active.png" height="50" width="50" /> 
                    <br />My Tanks
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#fish_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Fish_Header.png" height="50" width="50" />
                    <br />Fish
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#plant_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Plant_Header.com.png" height="50" width="50" />
                    <br />Plants
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#supplies_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Supplies_Header.png" height="50" width="50" />
                    <br />Supplies
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#maintenance_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Maintenance_Header.png" height="50" width="50" />
                    <br />Maintenance
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#inventory_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Equipment_Header.png" height="50" width="75" />
                    <br />Equipment
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#incident_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Report_Header.png" height="50" width="65" />
                        <br />Reporting
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#notifications_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Notification_Header.png" height="50" width="50" />
                    <br />Alerts <i class="badge badge-pill badge-info">@Model.Notifications.Count()</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#purchases_tab" class="nav-link" data-toggle="tab"><img src="~/images/icons/TankTab_Invoice_Header.png" width="50" height="50" />
                    <br />Invoices
                    </a>
                </li>
            </ul>

            <div class="tab-content" style="border-radius: 0 0 4px 4px; border-left: 1px solid #ddd; border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; padding: 10px; ">
                <!-- tanks tab -->
                <div class="tab-pane container active" id="tanks_tab">
                    <partial name="tabs/_Tab_MyTanks" model="Model" />
                </div>
                <!-- fish tab -->
                <div class="tab-pane container-fluid justify-content-center fade" id="fish_tab">
                    <partial name="tabs/_Tab_Fish" model="Model" />
                </div>
                <!-- fish tab -->
                <div class="tab-pane container-fluid justify-content-center fade" id="plant_tab">
                    <partial name="tabs/_Tab_LivePlants" model="Model" />
                </div>
                <!-- supplies tab -->
                <div class="tab-pane container-fluid justify-content-center fade" id="supplies_tab">
                    <partial name="tabs/_Tab_SuppliesFood" model="Model" />
                </div>
                <!-- maintenance tab -->
                <div class="tab-pane container fade" id="maintenance_tab">
                    <partial name="tabs/_Tab_Maintenance" model="Model" />
                </div>
                <!-- Equipment tab -->
                <div class="tab-pane container-fluid fade" id="inventory_tab">
                    <partial name="tabs/_Tab_Inventory" model="Model" />
                </div>
                <!-- incident tab -->
                <div class="tab-pane container fade" id="incident_tab">
                    <partial name="tabs/_Tab_IncidentReports" model="Model" />
                </div>
                <!-- alerts tab -->
                <div class="tab-pane container fade" id="notifications_tab">
                    <partial name="tabs/_Tab_Notifications" />
                </div>
                <!-- purchases tab -->
                <div class="tab-pane container fade" id="purchases_tab">
                    <partial name="tabs/_Tab_PurchaseInvoices" model="Model" />
                </div>
            </div>
        </div>
        <br />
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/Purchases/Purchases.js"></script>
    <script type="text/javascript" src="~/js/Tank/Tank.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
}

