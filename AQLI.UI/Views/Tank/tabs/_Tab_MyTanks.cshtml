@using AQLI.Data.Models;

@model List<AQLI.Data.Models.AquaticTankModel>

<div class="row justify-content-center">
    <div class="col-12">
        <br />
        <table class="table-striped table-bordered table-hover col-12">
            <thead>
                <tr>
                    <td></td>
                    <td>Id</td>
                    <td>Tank Name</td>
                    <td>Description</td>
                    <td>Tank Capacity</td>
                    <td>Tank Population</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="user-tank-record" data-id="@item.TankId">
                        <td class="tank-selected">
                            <input type="checkbox" data-id="" />
                        </td>
                        <td>@item.TankId</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Capacity Gallons</td>
                        <td>@item.FishPopulation.Count()</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>