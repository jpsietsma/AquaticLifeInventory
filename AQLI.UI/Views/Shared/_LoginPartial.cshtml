@using Microsoft.AspNetCore.Identity;
@using AQLI.Data.Models;
@using AQLI.DataServices.Extensions;

@inject SignInManager<WebsiteUser> SignInManager
@inject UserManager<WebsiteUser> UserManager

@{ 
    var userModel = User.GetUserModel(UserManager);
}
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="far fa-user"></i> @userModel.FirstName @userModel.LastName</a>
    <div class="dropdown-menu">
        <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">My Account</a>
      <div class="dropdown-divider"></div>
      <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
          <button type="submit" class="dropdown-item btn btn-secondary text-dark">Logout</button>
      </form>
    </div>
  </li>
    <li class="nav-item">
        
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
