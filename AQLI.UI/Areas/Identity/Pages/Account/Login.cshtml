@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="card">
                <div class="card-header text-center">
                    <i class="fas fa-user-lock"></i> Please login to continue..
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@
                        <div class="form-group">
                            <span asp-validation-for="Input.Email" class="text-danger"></span><br />
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                        <div class="form-group">
                                <span asp-validation-for="Input.Password" class="text-danger"></span><br />
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />                                           
                        </div>
                        <div class="form-group">
                            <div class="row col-12">
                                <div class="col-6">
                                    <input asp-for="Input.RememberMe" class="form-check" />
                                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                                </div>
                                <div class="col-6">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                                </div>
                            </div>                                                                                   
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                            <a class="btn btn-outline-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </div>
                    </form>
                    @{
                        if (!((Model.ExternalLogins?.Count ?? 0) == 0))
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-info" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
