@model IEnumerable<AQLI.Data.Models.PurchaseCategoryModel>

@{
    ViewData["Title"] = "PurchaseCategories";
}

<h1>PurchaseCategories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryColor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchaseCategoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PurchaseCategoryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PurchaseCategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
