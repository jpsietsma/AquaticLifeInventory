@using AQLI.Data.Models;
@using AQLI.DataServices;
@using Microsoft.AspNetCore.Identity;

@model AQLI.Data.Models.UserFishModel

@inject UserManager<WebsiteUser> UserDetails;
@inject DataFactory DataSource;

@{
    ViewData["Title"] = "Edit";

    var user = await UserDetails.GetUserAsync(User);
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">
                Edit Fish Details | @Model.FishName
            </h4>
        </div><div class="container-fluid"></div>
        <div class="modal-body">
            <b>
                !!!! Modal Body Goes Here !!!!
            </b>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
        </div>
    </div>
</div>



<h1>Edit</h1>

<h4>UserFishModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserFishID" />
            <div class="form-group">
                <label asp-for="EncumbranceMultiplier" class="control-label"></label>
                <input asp-for="EncumbranceMultiplier" class="form-control" required />
                <span asp-validation-for="EncumbranceMultiplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishName" class="control-label"></label>
                <input asp-for="FishName" class="form-control" />
                <span asp-validation-for="FishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishTypeID" class="control-label"></label>
                <select asp-for="FishTypeID" class="form-control" asp-items="ViewBag.FishTypeID" required>
                    @foreach (var fishType in DataSource.List_FishTypes())
                    {
                        if (Model.FishTypeID == fishType.CreatureTypeID)
                        {
                            <option value="@fishType.CreatureTypeID" selected>@fishType.TypeName</option>
                        }
                        else
                        {
                            <option value="@fishType.CreatureTypeID">@fishType.TypeName</option>
                        }
                    }
                </select>
                <span asp-validation-for="FishTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseID" class="control-label"></label>
                <select asp-for="PurchaseID" class="form-control" asp-items="ViewBag.PurchaseID" disabled>
                    <option value="null">-- Select Purchase Record --</option>
                    @foreach (var purchaseDetails in DataSource.List_Purchases().Where(p => p.PurchaseID == Model.PurchaseID))
                    {
                        <option value="@purchaseDetails.PurchaseID">@purchaseDetails.Date + "--" + @purchaseDetails.Store.StoreName + "--" + @purchaseDetails.Description</option>
                    }
                </select>
                <span asp-validation-for="PurchaseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TankID" class="control-label"></label>
                <select asp-for="TankID" class="form-control" asp-items="ViewBag.TankID">
                    <option value="null">-- Unassigned --</option>
                    @foreach (var tankDetails in DataSource.Find_UserTanks(user.UserId))
                    {
                        if (Model.TankID == tankDetails.TankID)
                        {
                            <option value="@tankDetails.TankID" selected>@tankDetails.Name</option>
                        }
                        else
                        {
                            <option value="@tankDetails.TankID">@tankDetails.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="TankID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
